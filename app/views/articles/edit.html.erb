<%= error_messages_for :article %>
<% form_for @article do |f| %>
  <div class="box" id="box-articles-edit">
    <span class="top"><%=t :edit_article %></span>
    <p class="label"><label for="article_title"><%=t :title %></label></p>
    <p><%= f.text_field :title, :class => 'text-field' %></p>
    <p class="label"><label for="article_body"><%=t :body %></label></p>
    <p><%= f.text_area :body, :rows => '10', :class => 'text-field' %></p>
    <p>
      <%= submit_tag I18n.t(:save_changes), :disable_with => I18n.t(:save_changes) %>&nbsp;
      <%= link_to I18n.t(:upload_a_new_file), new_upload_path, :popup => ['height=520,width=820'] %> &nbsp;       
      <%= link_to I18n.t(:delete), article_path, :confirm => I18n.t(:are_you_sure), :method => :delete %> &nbsp; 
      <%= link_to I18n.t(:cancel), blog_path %>
    </p>
  <% end %>
  <div class="clear"> </div>
</div>
