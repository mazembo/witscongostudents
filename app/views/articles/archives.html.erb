<div id="primary">
  <div class="info-left">
    <% if !@articles.empty? %>
      <div class="title article-title">
        <% if current_controller == 'search' %>
          <%=t :search_results %>
        <% else %>
          <%=t :blog_archives %>
        <% end %>
      </div>
    <% else %>
      <div class="title article-title"><%=t :no_articles_found %></div>
    <% end %>
  </div>
  <div class="clear"> </div>
  <ul class="archives">
  <% for article in @articles %>
    <li>
      <span class="title"><%= link_to h(article), article %></span>&nbsp;
      <span class="detail"><%= time_ago_or_time_stamp(article.created_at) %> 
      <%=t :by %> <%= link_to h(article.user), user_articles_path(article.user) %></span>
    </li>
  <% end unless @articles.empty? %>
  <% if current_controller == 'search' %>
    <li class="detail"><%= link_to I18n.t(:visit_blog_archives)+' &raquo;', blog_archives_path, :class => 'text' %></li>
  <% end %>
  </ul>
</div>
<div id="secondary">
  <%= render :partial => 'articles/secondary'%>
</div>
