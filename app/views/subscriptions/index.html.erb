<div class="info-left">
  <span class="title"><%=t :subscriptions %></span>
</div>
<div class="clear"> </div>
  
<% if @subscriptions.blank? %>
  <p><%=t :no_subscriptions_info, :scope => :messages %></p>
<% else %>
  <table cellspacing="0">
    <thead>
      <tr>
        <th class="tcl" colspan="2">Topics</th>
      </tr>
    </thead>
    <tbody>
      <% for subscription in @subscriptions %>
        <tr>
          <td class="tcl"><%= link_to h(subscription.topic), subscription.topic %></td>
          <td class="tcr"><%= link_to '('+I18n.t(:x)+')', subscription_path(subscription), :confirm => I18n.t(:are_you_sure), :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
