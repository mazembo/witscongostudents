<% if !@avatars.blank? %>
  <table cellspacing="0">
    <thead>
      <tr>
        <th class="tcl" colspan="2"><%= link_to I18n.t(:avatars), avatars_path %></th>
      </tr>
    </thead>
    <tbody>
      <% for avatar in @avatars %>
        <tr>
          <td class="tci"><%= icon_for(avatar) %></td>
          <td class="tcl">
            <%= link_to truncate(h(avatar)), avatar.attachment.url %> <%=t :by %> <%=h avatar.user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
